rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Make media folder public for SEO
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Make post images public for SEO
    match /post/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Make post-image folder public for SEO
    match /post-image/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Keep other paths private (require authentication)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

